<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PERSONEL DURUM LİSTESİ"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="20dp"
        android:background="#000000"/> <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerWorkers"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:padding="10dp"/>

    <Button
        android:id="@+id/btnHaritayaGit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HARİTAYA GİT"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#2196F3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnCikisYap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GÜVENLİ ÇIKIŞ"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#F44336"
        android:layout_margin="20dp"/>

</LinearLayout>



