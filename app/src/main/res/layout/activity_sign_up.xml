<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    android:background="@color/gri_zemin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ARAMIZA KATILIN"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/bordo_ana"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personel Kayıt Ekranı"
        android:textSize="14sp"
        android:textColor="@color/gri_yazi"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/etAd"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Adınız"
        android:inputType="textPersonName"
        android:background="@android:color/white"
        android:paddingStart="20dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/etSoyad"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Soyadınız"
        android:inputType="textPersonName"
        android:background="@android:color/white"
        android:paddingStart="20dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/etKayitSifre"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Şifre Belirleyin"
        android:inputType="textPassword"
        android:background="@android:color/white"
        android:paddingStart="20dp"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/etKayitSifreTekrar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Şifre Tekrar"
        android:inputType="textPassword"
        android:background="@android:color/white"
        android:paddingStart="20dp"
        android:layout_marginBottom="25dp"/>

    <Button
        android:id="@+id/btnKayitOl"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="KAYDI TAMAMLA"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/beyaz"
        android:backgroundTint="@color/bordo_ana"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zaten hesabınız var mı? "
            android:textColor="@color/gri_yazi"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvGirisDon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giriş Yap"
            android:textColor="@color/bordo_ana"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>