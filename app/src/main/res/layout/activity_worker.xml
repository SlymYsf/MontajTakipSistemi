<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="#f5f5f5">

    <TextView
        android:id="@+id/tvWorkerWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoşgeldin, Personel"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvWorkStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Durum: Bekleniyor..."
        android:textSize="18sp"
        android:textColor="#666666"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/btnStartWork"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="İş Başı Yap"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnStopWork"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Çalışmayı Bırak"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="#FF9800"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnGuvenliCikis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GÜVENLİ ÇIKIŞ"
        android:textSize="16sp"
        android:backgroundTint="#F44336"
        android:layout_marginTop="20dp"/>

</LinearLayout>